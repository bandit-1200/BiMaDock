<Window x:Class="BiMaDock.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Einstellungen" Width="400" Height="500"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        BorderBrush="#444444"
        BorderThickness="1">

    <Window.Effect>
        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5" Color="Black"/>
    </Window.Effect>

    <Grid>
        <Border Background="#2D2D2D" CornerRadius="15" Padding="20">
            <StackPanel Margin="20">
                <TextBlock Text="Farben anpassen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="White"/>
        
                <TextBlock Text="Primärfarbe:" Foreground="White"/>
                <xctk:ColorPicker Name="PrimaryColorPicker" SelectedColorChanged="PrimaryColorPicker_SelectedColorChanged" Margin="0,0,0,10"/>

                <TextBlock Text="Sekundärfarbe:" Foreground="White"/>
                <xctk:ColorPicker Name="SecondaryColorPicker" SelectedColorChanged="SecondaryColorPicker_SelectedColorChanged" Margin="0,0,0,20"/>
        
                <TextBlock Text="Animationsgeschwindigkeit" FontSize="20" FontWeight="Bold" Margin="0,20,0,10" Foreground="White"/>
                <TextBlock Text="Animationsgeschwindigkeit:" Foreground="White"/>
                <Slider Name="AnimationSpeedSlider" Minimum="0" Maximum="2" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,20"/>
        
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Speichern" Background="#0078D4" Foreground="White" Click="SaveButton_Click" Height="40" Width="100" Margin="0,0,10,0"/>
                    <Button Content="Beenden" Background="#2D2D2D" Foreground="White" Click="ExitButton_Click" Height="40" Width="100"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
