<Window x:Class="BiMaDock.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Einstellungen" Width="450" Height="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        BorderBrush="#444444"
        BorderThickness="1">

    <Window.Effect>
        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5" Color="Black"/>
    </Window.Effect>

    <Grid>
        <Border Background="#2D2D2D" CornerRadius="15" Padding="20">
            <StackPanel Margin="20">
                <!-- Titelbereich -->
                <TextBlock Text="Einstellungen" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="White" HorizontalAlignment="Center"/>
                
                <!-- Farboptionen -->
                <TextBlock Text="Farben anpassen" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <TextBlock Text="Prim채rfarbe:" Foreground="White"/>
                    <xctk:ColorPicker Name="PrimaryColorPicker" SelectedColorChanged="PrimaryColorPicker_SelectedColorChanged" Margin="0,5,0,15"/>

                    <TextBlock Text="Sekund채rfarbe:" Foreground="White"/>
                    <xctk:ColorPicker Name="SecondaryColorPicker" SelectedColorChanged="SecondaryColorPicker_SelectedColorChanged" Margin="0,5,0,15"/>
                </StackPanel>
        
                <!-- Animationsgeschwindigkeit -->
                <TextBlock Text="Animationsgeschwindigkeit" FontSize="20" FontWeight="Bold" Margin="0,10,0,10" Foreground="White"/>
                <TextBlock Text="Animationsgeschwindigkeit:" Foreground="White"/>
                <Slider Name="AnimationSpeedSlider" Minimum="0" Maximum="2" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,5,0,20"/>

                <!-- Autostart-Option -->
                <CheckBox Name="AutoStartCheckBox" Content="Programm beim Start ausf체hren" Checked="AutoStartCheckBox_Checked" Unchecked="AutoStartCheckBox_Unchecked" Foreground="White" Margin="0,10,0,20"/>
        
                <!-- Schaltfl채chen -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Speichern" Background="#0078D4" Foreground="White" Click="SaveButton_Click" Height="40" Width="120" Margin="10"/>
                    <Button Content="Beenden" Background="#2D2D2D" Foreground="White" Click="ExitButton_Click" Height="40" Width="120" Margin="10"/>
                </StackPanel>

                <!-- Version anzeigen -->
                <Button Content="Version anzeigen" Background="#0078D4" Foreground="White" Click="ShowVersionButton_Click" Height="40" Width="200" Margin="20,20,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
