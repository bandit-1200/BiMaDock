<Window x:Class="MyDockApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyDockApp" Height="400" Width="800"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        VerticalAlignment="Top" AllowsTransparency="True" Background="Transparent"
        AllowDrop="True"
        ShowInTaskbar="False">
    <Window.Resources>
        <!-- Farben -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0A84FF"/>
        <SolidColorBrush x:Key="ForegroundColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HighlightColor" Color="#292929"/>

        <!-- Button-Stil -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBlock-Stil -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Grid-Hintergrund -->
        <Style TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <StackPanel x:Name="MainStackPanel" Orientation="Vertical" HorizontalAlignment="Center">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                <!-- Haupt-Dock Panel -->
                <StackPanel Orientation="Horizontal" Name="DockPanel"
                            AllowDrop="True" Background="{StaticResource PrimaryColor}"
                            HorizontalAlignment="Center"
                            MinWidth="60" MinHeight="50"
                            Visibility="Visible"
                            Canvas.Top="0">
                    <StackPanel.ContextMenu>
                        <ContextMenu x:Name="DockContextMenu">
                            <MenuItem Header="Beenden" Click="Exit_Click"/>
                            <Separator/>
                            <MenuItem x:Name="OpenMenuItem" Header="Öffnen" Click="Open_Click"/>
                            <MenuItem x:Name="DeleteMenuItem" Header="Löschen" Click="Delete_Click"/>
                            <MenuItem x:Name="EditMenuItem" Header="Eigenschaften bearbeiten" Click="Edit_Click"/>
                            <Separator/>
                            <MenuItem Header="Kategorie erstellen" Click="AddCategory_Click"/>
                        </ContextMenu>
                    </StackPanel.ContextMenu>
                </StackPanel>
            </Grid>
            <!-- Kategorie-Dock Panel -->
            <Border x:Name="CategoryDockBorder" Background="{StaticResource SecondaryColor}" BorderBrush="{StaticResource AccentColor}" BorderThickness="2" CornerRadius="5" Padding="10" Visibility="Collapsed">
                <StackPanel x:Name="CategoryDockContainer" Tag="KategorieDockContainer" Orientation="Horizontal" AllowDrop="True" Background="{StaticResource PrimaryColor}" HorizontalAlignment="Center" MinWidth="60" MinHeight="50" MouseEnter="CategoryDockContainer_MouseEnter" MouseLeave="CategoryDockContainer_MouseLeave" MouseMove="CategoryDockContainer_MouseMove"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
