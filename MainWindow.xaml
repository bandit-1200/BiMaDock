<Window x:Class="MyDockApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyDockApp" Height="400" Width="800"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        VerticalAlignment="Top" AllowsTransparency="True" Background="Transparent"
        AllowDrop="True"
        ShowInTaskbar="False"> <!-- Symbol in der Taskleiste deaktivieren -->
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <StackPanel x:Name="MainStackPanel" Orientation="Vertical" HorizontalAlignment="Center">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                <!-- Haupt-Dock Panel -->
                <StackPanel Orientation="Horizontal" Name="DockPanel"
                            AllowDrop="True" Background="#CCCCCC"
                            HorizontalAlignment="Center"
                            MinWidth="60" MinHeight="50"
                            Visibility="Visible"
                            Canvas.Top="0"> <!-- Die Top-Property auf 0 setzen -->
                    <StackPanel.ContextMenu>
                        <ContextMenu x:Name="DockContextMenu">
                            <MenuItem Header="Beenden" Click="Exit_Click"/>
                            <Separator/>
                            <MenuItem x:Name="OpenMenuItem" Header="Öffnen" Click="Open_Click"/>
                            <MenuItem x:Name="DeleteMenuItem" Header="Löschen" Click="Delete_Click"/>
                            <MenuItem x:Name="EditMenuItem" Header="Eigenschaften bearbeiten" Click="Edit_Click"/>
                            <Separator/>
                            <MenuItem Header="Kategorie erstellen" Click="AddCategory_Click"/>
                        </ContextMenu>
                    </StackPanel.ContextMenu>
                </StackPanel>
            </Grid>

            <!-- Kategorie-Dock Panel -->
            <StackPanel Orientation="Horizontal" Name="CategoryDockContainer"
                        Background="#EEEEEE" Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        MinWidth="60" MinHeight="50"/>
        </StackPanel>
    </Grid>
</Window>
