<Window x:Class="MyDockApp.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategorie erstellen" Height="200" Width="400">
    <Grid>
        <TextBlock Name="QuestionTextBlock" Text="Bitte geben Sie den Namen der Kategorie ein:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="CategoryNameTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="0,30,0,0"/>
        <Button Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Margin="0,0,0,30" Click="OkButton_Click"/>
    </Grid>
</Window>
