<Window x:Class="BiMaDock.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestWindow" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10" Click="ExitButton_Click"/>
        <Slider x:Name="ValueSlider" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Minimum="-6000" Maximum="6000" Value="0" TickFrequency="5" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Margin="10,50,0,0" ValueChanged="Slider_ValueChanged"/>
        <TextBlock x:Name="SliderValueText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0" Text="0"/>
    </Grid>
</Window>
