<Window x:Class="MyDockApp.EditPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eigenschaften bearbeiten" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        BorderBrush="#444444"
        BorderThickness="1">
    <Window.Effect>
        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5" Color="Black"/>
    </Window.Effect>
    <Grid>
        <Border Background="#2D2D2D" CornerRadius="15" Padding="20">
            <StackPanel Margin="10">
                <TextBlock Text="Name:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <TextBox Name="NameTextBox" Margin="0,0,0,20" BorderBrush="#444444" BorderThickness="1" Padding="10" Background="#3C3C3C" Foreground="White" FontSize="14"/>
                <TextBlock Text="Pfad:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <TextBox Name="PathTextBox" Margin="0,0,0,20" IsEnabled="False" BorderBrush="#444444" BorderThickness="1" Padding="10" Background="#3C3C3C" Foreground="White" FontSize="14"/>
                <TextBlock Text="Symbol:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <ScrollViewer Name="ScrollViewerSymbolPanel" Height="120" Margin="0,0,0,20" BorderBrush="#444444" BorderThickness="1" Padding="10" Background="#3C3C3C">
                    <StackPanel Name="SymbolPanel" Orientation="Horizontal" Background="#2D2D2D">
                        <!-- Beispiel-Symbole -->
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Speichern" Name="SaveButton" Click="SaveButton_Click" Margin="0,0,15,0" Padding="10,5" Background="#0078D4" Foreground="White" BorderBrush="#444444" BorderThickness="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Hochladen" Click="UploadIcon_Click" Padding="10,5" Background="#2D2D2D" BorderBrush="#444444" Foreground="White" BorderThickness="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Abbrechen" Click="CancelButton_Click" Padding="10,5" Background="#2D2D2D" BorderBrush="#444444" Foreground="White" BorderThickness="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
