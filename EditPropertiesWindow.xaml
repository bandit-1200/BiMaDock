<Window x:Class="MyDockApp.EditPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eigenschaften bearbeiten" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"> <!-- Fenster in der Bildschirmmitte anzeigen -->
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox Name="NameTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Pfad:" />
            <TextBox Name="PathTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Symbol:" />
            <ScrollViewer Name="ScrollViewerSymbolPanel" Height="100">
                <StackPanel Name="SymbolPanel" Orientation="Horizontal" Background="LightGray">
                    <!-- Beispiel-Symbole -->
                </StackPanel>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Speichern" Name="SaveButton" Click="SaveButton_Click" Margin="0,0,10,0" />
                <Button Content="Abbrechen" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
